  justify-content: space-between;
}
.sh_title1{
  font-size: 22rpx;
  margin-top: 10rpx;
}
.sh_title2{
  margin-top: 20rpx;
  width: 40rpx;
  height: 40rpx;
}
.shop_header2{
   display: flex;
  justify-content: space-between; 
  font-size: 22rpx;
   padding-top: 30rpx;
  line-height: 35rpx;  
}
.shop_header3{
  flex: 1;
  height: 100%;
}
.shop_header4{
  width: 30rpx;
  height: 35rpx;
  background-color: #70BC46;
  text-align: center;
  border-radius: 6rpx;  
  margin-right: 10rpx;
}
/*——————————头部样式结束————————  */
/*轮播  */
.swiper-container{
 position: relative;
}
.swiper-container .swiper{
 height: 360rpx;
}
.swiper-container .swiper .img{
 width: 100%;
 height: 100%;
}
.dots{
 position: absolute;
 left: 0;
 right: 0;
 bottom: 20rpx;
 display: flex;
 background: #000;
 width: 120rpx;
 margin: auto;
 border-radius: 10rpx;
 height: 20rpx;
 justify-content: center;
}
.dot{
 margin: 4rpx 8rpx;
 width: 14rpx;
 height: 14rpx;
 background: #fff;
 border-radius: 8rpx;
 transition: all .6s;
}
.active{
 width: 34rpx;
 background: #f80;
}
/*————————选择列表开始————————  */
.info_list{
  border-bottom: 1rpx solid #E7E7E8;
  padding: 25rpx 0rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  background-color: white;
}
.info_listorder{
  width: 90rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 0rpx 29rpx;
}
.info_listorder1{
  width: 110rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 0rpx 29rpx;
}
.info_listimg{
  width: 80rpx;
  height: 80rpx;
}
.infolistext{
  font-size: 28rpx;
  color: rgba(51, 51, 51);
  margin-top: 24rpx;
}
/*————————选择列表结束————————  */
/*————————商家信息开始————————  */
