}
.info_sllerimg{
  width: 20rpx;
  height: 30rpx;
}
.info_sellermop{
  padding: 20rpx 30rpx 20rpx 0rpx;
  border-bottom: 1rpx solid #E7E7E8;
  color: #666;
  display: flex;
}
.info_sellermop1{
  margin-left: 82rpx;
  width: 350rpx;
}
.right{margin-left: 120rpx;margin-top: 25rpx;}
.info_sellertime{
  height: 80rpx;
  display: flex;
  color: #666;
  line-height: 80rpx;
}
.info_sellertime view:nth-child(1){
  margin-right: 82rpx;
}

/*————————商家信息结束————————  */

/*————————配送信息开始————————  */
.info_distribution{
  margin-bottom: 10rpx;
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  border-top: 1rpx solid #E7E7E8;
  border-bottom: 1rpx solid #E7E7E8;
  background-color: white;
  margin-top: 10rpx;
}
.distribution_timep{
  border: 1rpx solid #34AAFF;
  padding: 5rpx;
  color: #34AAFF;
  border-radius: 5rpx;
  width: 120rpx;
  height: 25rpx;
  line-height: 25rpx;
  text-align: center;
  font-size: 24rpx;
}
.distribution_time{
  margin-top: 30rpx;
  display: flex;
}
.distribution_timez{
  color: #666;
  margin-left: 20rpx;
}
.distribution_timez view:nth-child(2){
  margin-top: 10rpx;
}
.discount{
  display: flex;
  font-size: 28rpx;
  height: 80rpx;
  background-color: white;
  /* margin-top: 10rpx; */
  border-top: 1rpx solid #E7E7E8;
  /* border-bottom: 1rpx solid #E7E7E8; */
  align-items: center;
  padding: 0rpx 30rpx;
}
.discount view:nth-child(1){
  background-color: #FF7070;
  width: 40rpx;
  height: 40rpx;
  border-radius: 6rpx;
  color: white;
  text-align: center;
  line-height: 40rpx;
}
.discount view:nth-child(2){
  margin-left: 20rpx;
  color: #666;
}

