  background-color: white;
  border-radius: 50%;
  overflow: hidden;
}
.sh_text{
  height: 150rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 35rpx;
}
.sh_text1{
  font-size: 34rpx;
}
.sh_text2{
