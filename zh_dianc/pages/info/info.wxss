}
/*kpgg*/
.zhezhao {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 998;
}
.kpgg {
   width:600rpx;
  left:50%;
  top:100rpx;
  position:fixed;
  transform:translate(-50%, 0);
  background:#fff;
  border-radius:10px;
  z-index:999;
}
.kpgg-swiper{
  display: block;
  height: 900rpx;
}
.close-kpgg{
  right: -40rpx;
  top: -40rpx;
  z-index:999;
  position: absolute;
  width:80rpx;
  height: 80rpx;
}

